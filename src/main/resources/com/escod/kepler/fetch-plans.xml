<fetchPlans xmlns="http://jmix.io/schema/core/fetch-plans">
  <fetchPlan class="com.escod.kepler.entity.activity.Activity"
             extends="_base"
             name="activity-name-details">
    <property name="categoryActivityDetails" fetchPlan="_base" fetch="AUTO">
      <property name="categoryActivity" fetch="AUTO" fetchPlan="_base"/>
    </property>
    <property name="details" fetchPlan="_base" fetch="AUTO"/>
  </fetchPlan>

  <fetchPlan class="com.escod.kepler.entity.blog.Post"
             extends="_base" entity="Post"
             name="post-details">
    <property name="tags" fetchPlan="_base" fetch="AUTO"/>
    <property name="relatedPosts" fetchPlan="_base" fetch="AUTO"/>
    <property name="category" fetchPlan="_base" fetch="AUTO">
      <property name="id" fetch="AUTO"/>
    </property>
  </fetchPlan>

  <fetchPlan class="com.escod.kepler.entity.blog.Post"
             extends="_instance_name" entity="Post" overwrite="true"
             name="posts-list-base">
    <property name="id" fetch="AUTO"/>
    <property name="title" fetch="AUTO"/>
    <property name="image" fetch="AUTO"/>
    <property name="createdDate" fetch="AUTO"/>
  </fetchPlan>
</fetchPlans>