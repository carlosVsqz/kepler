<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
    objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1" author="untitled">
    <createTable tableName="POST">
      <column name="ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POST"/>
      </column>
      <column name="VERSION" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="CREATED_BY" type="VARCHAR(255)"/>
      <column name="CREATED_DATE" type="timestamp with time zone"/>
      <column name="NAME" type="VARCHAR(255)"/>
      <column name="TITLE" type="VARCHAR(255)"/>
      <column name="image_url" type="VARCHAR(1024)"/>
      <column name="HTML_CONTENT" type="CLOB"/>
      <column name="POST_CATEGORY_ID" type="UUID"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="untitled">
    <createTable tableName="POST_CATEGORY">
      <column name="ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POST_CATEGORY"/>
      </column>
      <column name="CREATED_BY" type="VARCHAR(255)"/>
      <column name="CREATED_DATE" type="timestamp with time zone"/>
      <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
      <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
      <column name="ACTIVE" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
      <column name="NAME" type="VARCHAR(255)"/>
      <column name="DESCRIPTION" type="VARCHAR(255)"/>
    </createTable>
  </changeSet>
  <changeSet id="3" author="untitled">
    <createTable tableName="POST_POST_LINK">
      <column name="POST_1_ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POST_POST_LINK"/>
      </column>
      <column name="POST_2_ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POST_POST_LINK"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="4" author="untitled">
    <createTable tableName="POST_TAGS">
      <column name="ID" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POST_TAGS"/>
      </column>
      <column name="NAME" type="VARCHAR(255)"/>
      <column name="TAG" type="VARCHAR(255)"/>
      <column name="POST_ID" type="UUID"/>
    </createTable>
  </changeSet>
  <changeSet id="5" author="untitled">
    <createIndex indexName="IDX_POST_TAGS_POST" tableName="POST_TAGS">
      <column name="POST_ID"/>
    </createIndex>

    <addForeignKeyConstraint baseColumnNames="POST_ID" baseTableName="POST_TAGS" constraintName="FK_POST_TAGS_ON_POST"
                             onDelete="SET NULL" referencedColumnNames="ID" referencedTableName="POST"/>
  </changeSet>
  <changeSet id="6" author="untitled">
    <addForeignKeyConstraint baseColumnNames="POST_1_ID" baseTableName="POST_POST_LINK"
                             constraintName="FK_POSPOS_ON_POST_1" referencedColumnNames="ID"
                             referencedTableName="POST"/>
  </changeSet>
  <changeSet id="7" author="untitled">
    <addForeignKeyConstraint baseColumnNames="POST_2_ID" baseTableName="POST_POST_LINK"
                             constraintName="FK_POSPOS_ON_POST_2" referencedColumnNames="ID"
                             referencedTableName="POST"/>
  </changeSet>
  <changeSet id="8" author="untitled">
    <addForeignKeyConstraint baseColumnNames="POST_CATEGORY_ID" baseTableName="POST"
                             constraintName="FK_POST_ON_POST_CATEGORY" onDelete="SET NULL" referencedColumnNames="ID"
                             referencedTableName="POST_CATEGORY"/>
  </changeSet>
</databaseChangeLog>