<!--                dataContainer="postTagDc">-->
<!--    </formLayout>-->
<!--    <hbox id="detailActions">-->
<!--      <button id="saveAndCloseBtn"-->
<!--              action="saveAction"/>-->
<!--      <button id="closeBtn"-->
<!--              action="closeAction"/>-->
<!--    </hbox>-->
<!--  </layout>-->
  <layout>
    <scroller height="95%"
              scrollBarsDirection="BOTH">
      <hbox maxWidth="100%" width="100%">
        <formLayout id="form" dataContainer="postTagDc" width="100%">
          <textField id="nameField" property="name"/>
          <textField id="tagField" property="tag"/>
        </formLayout>
      </hbox>
    </scroller>
    <hbox id="detailActions"
          height="5%"
          width="100%"
          maxWidth="100%"
          alignItems="CENTER"
          justifyContent="END">>
      <button id="saveAndCloseBtn"
              action="saveAction"/>
      <button id="closeBtn"
              action="closeAction"/>
    </hbox>
  </layout>
</view>
